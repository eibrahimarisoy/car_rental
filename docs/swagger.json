{
    "swagger": "2.0",
    "info": {
        "description": "This is a Car Rental API implementation.",
        "title": "Car Rental API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "http://www.swagger.io/support",
